<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/idk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="122dp"
        android:onClick="Doctor"
        android:text="Who are you?"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/doctorButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/doctorButton"
        android:layout_width="119dp"
        android:layout_height="116dp"
        android:layout_marginBottom="397dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:onClick="Doctor"
        android:src="@drawable/doctor_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idk" />

    <ImageButton
        android:id="@+id/patientButton"
        android:layout_width="129dp"
        android:layout_height="110dp"
        android:layout_marginBottom="160dp"
        android:src="@drawable/patient_logo"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
