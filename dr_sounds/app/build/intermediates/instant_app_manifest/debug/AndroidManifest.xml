<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dr_sounds"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="29" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.dr_sounds.ChooseUser" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.dr_sounds.DoctorInitLogin"
            android:label="Doctor_Screen" >
        </activity>
        <activity
            android:name="com.example.dr_sounds.Registration"
            android:label="Registration Screen" >
        </activity>
        <activity
            android:name="com.example.dr_sounds.UserSelection"
            android:label="User selection Screen" >
        </activity>
        <activity
            android:name="com.example.dr_sounds.doctorpage"
            android:label="Doctor dashboard" >
        </activity>
        <activity
            android:name="com.example.dr_sounds.AddFamilyMem"
            android:label="add family" >
        </activity>
        <activity
            android:name="com.example.dr_sounds.AudioSearch"
            android:label="audio page" >
        </activity>
        <activity
            android:name="com.example.dr_sounds.Patient_login"
            android:label="patient page" />
        <activity
            android:name="com.example.dr_sounds.prescription"
            android:label="prescription page" >
        </activity>
        <activity
            android:name="com.example.dr_sounds.EndScreen"
            android:label="End Screen" >
        </activity>
        <activity
            android:name="com.example.dr_sounds.PatientDashboard"
            android:label="User DashBoard" >
        </activity>
        <activity
            android:name="com.example.dr_sounds.AudioRecord"
            android:label="Audio Recording" >
        </activity>
    </application>

</manifest>